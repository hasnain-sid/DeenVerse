{
  "expo": {
    "name": "DeenVerse",
    "slug": "deenverse",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "deenverse",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0f1419"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.deenverse.app",
      "infoPlist": {
        "NSCameraUsageDescription": "DeenVerse needs camera access to take photos for posts",
        "NSPhotoLibraryUsageDescription": "DeenVerse needs photo library access to share images"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0f1419"
      },
      "package": "com.deenverse.app",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "NOTIFICATIONS"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-secure-store",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#10b981"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "DeenVerse needs photo access to share images in posts"
        }
      ]
    ],
    "extra": {
      "apiUrl": "http://localhost:8081",
      "eas": {
        "projectId": "your-eas-project-id"
      }
    },
    "experiments": {
      "typedRoutes": true
    }
  }
}
